<h1> Listing all Articles </h1>

<ul> 
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <li>
                <%= link_to article.title, article %>
                <%= article.body %>
            </li>
            <br/>
        <% end %>
    <% end %>
</ul>
